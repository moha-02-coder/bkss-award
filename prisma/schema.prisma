generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Modèle pour les utilisateurs
model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String?
  domain    String?
  city      String?
  phone     String?
  role      UserRole @default(VOTER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  votes     Vote[]
  sessions  Session[]

  @@map("users")
}

// Modèle pour les sessions d'authentification
model Session {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

// Modèle pour les catégories
model Category {
  id                           String    @id @default(cuid())
  name                         String
  subtitle                     String
  special                      Boolean   @default(false)
  isLeadershipPrize            Boolean   @default(false)
  preAssignedWinner            String?
  preAssignedWinnerBio         String?
  preAssignedWinnerImage       String?
  preAssignedWinnerAchievements String[] // Array de réalisations
  preAssignedWinnerTribute     String?
  leadershipRevealed           Boolean   @default(false)
  createdAt                    DateTime  @default(now())
  updatedAt                    DateTime  @updatedAt

  // Relations
  candidates Candidate[]
  votes     Vote[]

  @@map("categories")
}

// Modèle pour les candidats
model Candidate {
  id            String   @id @default(cuid())
  categoryId    String
  name          String
  alias         String?
  image         String
  bio           String
  achievements  String[] // Array de réalisations
  songCount     Int?
  candidateSong String?
  audioFile     String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  category Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  votes    Vote[]

  @@map("candidates")
}

// Modèle pour les votes
model Vote {
  id           String   @id @default(cuid())
  userId       String
  categoryId   String
  candidateId  String
  candidateName String // Garder pour compatibilité
  timestamp    Int64 // Unix timestamp

  // Relations
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  category  Category  @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  candidate Candidate @relation(fields: [candidateId], references: [id], onDelete: Cascade)

  // Un utilisateur ne peut voter qu'une fois par catégorie
  @@unique([userId, categoryId])
  @@map("votes")
}

// Modèle pour les logs d'administration
model AdminLog {
  id        String   @id @default(cuid())
  userId    String
  action    String   // CREATE, UPDATE, DELETE, REVEAL_LEADERSHIP, etc.
  entity    String   // USER, CATEGORY, CANDIDATE, VOTE, etc.
  entityId  String?
  oldValues Json?    // Valeurs avant modification
  newValues Json?    // Valeurs après modification
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())

  @@map("admin_logs")
}

// Modèle pour les paramètres de l'application
model AppSetting {
  id    String @id @default(cuid())
  key   String @unique
  value Json
  updatedAt DateTime @updatedAt

  @@map("app_settings")
}

// Enums
enum UserRole {
  VOTER
  SUPER_ADMIN
}
